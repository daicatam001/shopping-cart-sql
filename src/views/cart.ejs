<%- include('./partials/header',{title:title}) %>


    <h1 class="mt-3">
        <%= title %>
    </h1>
    <div class="row">
        <% products.forEach(function(product){ %>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                          <%= product.title %>
                        </h5>
                        <h5 class="card-text">
                            <%= product.price %>
                        </h5>

                        <h5 class="card-text">
                           Số lượng <%= product.cartItem.amount %>
                        </h5>
                        <a href="#" class="btn btn-danger">Xóa</a>
                        
                    </div>
                </div>
            </div>
            <% }); %>
    </div>

    <%- include('./partials/footer') %>